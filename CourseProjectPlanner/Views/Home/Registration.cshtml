@{
	ViewData["Title"] = "Реєстрація";
}

<div class="container h-100">
	<div class="row d-flex justify-content-center align-items-center h-100">
		<div class="col-lg-12 col-xl-11">
			<div class="row justify-content-center">
				<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

					<p class="text-center h1">Реєстрація</p>

					<form class="mx-1 mx-md-4">

						<div class="d-flex flex-row align-items-center mb-4">
							<i class="fas fa-user fa-lg me-3 fa-fw"></i>
							<div data-mdb-input-init class="form-outline flex-fill mb-0">
								<input type="text" id="nameInput" class="form-control" />
								<label class="form-label" for="form3Example1c">Ім'я</label>
							</div>
						</div>

						<div class="d-flex flex-row align-items-center mb-4">
							<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
							<div data-mdb-input-init class="form-outline flex-fill mb-0">
								<input type="email" id="loginInput" class="form-control" />
								<label class="form-label" for="form3Example3c">Логін</label>
							</div>
						</div>

						<div class="d-flex flex-row align-items-center mb-4">
							<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
							<div data-mdb-input-init class="form-outline flex-fill mb-0">
								<input type="password" id="passwordInput" class="form-control" />
								<label class="form-label" for="form3Example4c">Пароль</label>
							</div>
						</div>

						<div class="d-flex flex-row align-items-center mb-4">
							<i class="fas fa-key fa-lg me-3 fa-fw"></i>
							<div data-mdb-input-init class="form-outline flex-fill mb-0">
								<input type="password" id="passwordRepeatInput" class="form-control" />
								<label class="form-label" for="form3Example4cd">Підтвердіть пароль</label>
							</div>
						</div>



						<div class="d-flex justify-content-center mx-4">
							<button class="text-center green-button">Зареєструватись</button>
						</div>

						<p class="text-center">Вже зареєстровані? <a asp-controller="Home" asp-action="Login">Увійти</a></p>

					</form>

				</div>

			</div>
		</div>
	</div>
</div>
